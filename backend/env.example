# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/stock-sentiment

# Reddit API (Get from https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=StockSentimentApp/1.0
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password

# RapidAPI Key (Get from https://rapidapi.com/stocktwits/api/stocktwits)
# Subscribe to free plan: 500k requests/month, 1000 requests/hour
RAPIDAPI_KEY=your_rapidapi_key_here

# News API (Get from https://newsapi.org/)
NEWS_API_KEY=your_news_api_key

# Worker Configuration
INGESTION_INTERVAL_MINUTES=15
SENTIMENT_BATCH_SIZE=10

# API Configuration
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

